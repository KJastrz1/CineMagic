FROM node:20.8.0 as build

WORKDIR /app
COPY package.json package-lock.json ./
RUN npm install --legacy-peer-deps
COPY . ./

ARG API_URL
ARG GOOGLE_AUTH_CLIENT_ID
ARG CLOUDINARY_CLOUD_NAME

ENV REACT_APP_API_URL=$API_URL
ENV REACT_APP_GOOGLE_AUTH_CLIENT_ID=$GOOGLE_AUTH_CLIENT_ID
ENV REACT_APP_CLOUDINARY_CLOUD_NAME=$CLOUDINARY_CLOUD_NAME


RUN echo "REACT_APP_API_URL=$REACT_APP_API_URL"
RUN echo "REACT_APP_GOOGLE_AUTH_CLIENT_ID=$REACT_APP_GOOGLE_AUTH_CLIENT_ID"
RUN echo "REACT_APP_CLOUDINARY_CLOUD_NAME=$REACT_APP_CLOUDINARY_CLOUD_NAME"

RUN npm run build

FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
